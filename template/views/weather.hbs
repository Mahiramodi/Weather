<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Weather</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Texturina:wght@300&display=swap" rel="stylesheet">

    

<body>
   {{>navbar}}
    <section class="weather">
        <div class="container-fluid">
            <div class="row">
                <div class=" col-md-6 col-12 mx-auto text">
                    <form action="">
                        <input type="text" id="cityName" placeholder ="Enter a city name" autocomplete="off">
                        <input type="submit" value="Search" id="submitbtn">
                    </form>

                    <div class="infobox">
                        <div class="toparea">
                        <p id="day">day</p>
                        <p id="date">Date</p>
                        <p id="time">Time</p>
                        </div>
                        <div class="middlearea " >
                               <div id="city"></div>
                               <div class="bottomarea data_hide" id="mid">
                                <p><span id="temp"></span>&deg;C </p>
                                <p id="icon"></p>
                            </div>
                            </div>
                            
                    </div>
                </div>
                
            </div>

        </div>

    </section>
    {{>footer}}
<script src="js/main.js"></script>

</body>

</html>